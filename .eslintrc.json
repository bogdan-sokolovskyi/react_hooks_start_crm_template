{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "wesbos", 
        "airbnb", 
        "prettier", 
        "prettier/react",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", "react-hooks", "html", "prettier"
    ],
    "rules": {
        "no-unused-vars": 0,
        "import/prefer-default-export": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/extensions": 0,
        "no-underscore-dangle": 0,
        "react/display-name": 0,
        "react/jsx-curly-brace-presence": 0,
        "prettier/prettier": 1,
        "react/jsx-props-no-spreading": "off",
        "react/jsx-boolean-value": 0,
        "react/prop-types": 0,
        "no-shadow": 0,
        "dot-notation": 0,
        "react-hooks/rules-of-hooks": 0,
        "func-names": 0
    }
}
